[ghq]
	root = ~/git

[core]
	excludesfile = ~/.gitignore
	quotepath = false
[user]
	name = swamp09
	email = shu.numata@esm.co.jp
[alias]
	alias = !git config --get-regexp '^alias\\.' | sed 's/alias\\.\\([^ ]*\\) \\(.*\\)/\\1\\\t => \\2/' | sort
	l = log --decorate
	lr = log --reverse --decorate
	lp = log -p --stat --decorate
	ad = add
	ap = add -p
	t = tag -l
	b = branch -a
	dm = diff master
	dw = diff --color-words
	ds = diff --staged
	co = checkout
	br = branch
	brd = branch -D
	rename-branch = branch -m
	ci = commit -v
	ca = commit -v --amend
	st = status
	unstage = reset HEAD --
	uncommit = reset --soft HEAD~
	rs = reset --soft
	rh = reset --hard
	f = fetch --prune
	fp = push -f
	pom = pull origin master
	pum = pull upstream master
	re = remote -v
	add-upstream = remote add upstream
	graph = log --graph --all --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
	cp = cherry-pick
	rb = rebase -i
	com = checkout master
[color]
	status = auto
	diff = auto
	branch = auto
	interactive = auto
[diff]
	indentHeuristic = true
[pull]
  rebase = true
[push]
  default = current
[rebase]
	autostash = true
[rerere]
	enabled = true
[browse-remote "github.com"]
	top = https://{host}/{path}
	ref = https://{host}/{path}/tree/{short_ref}
	rev = https://{host}/{path}/commit/{commit}
	pr = https://{host}/{path}/pull/{short_ref}
	file = "https://{host}/{path}/{file.directory? and :tree or :blob}/{short_rev}/{file}{lines && \"#L%s\" % lines.join(\"-\")}"
